<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--  指定所绑定的接口引用路径  -->
<mapper namespace="mapper.mapper.DepartmentMapper">
    <resultMap id="deptInfo" type="mapper.entity.Department">
        <id column="id" property="id"/>
        <result column="dept_name" property="deptName"/>
    </resultMap>


    <resultMap id="deptInfo2" type="mapper.entity.Department">
        <id column="did" property="id"/>
        <result column="dept_name" property="deptName"/>
<!--        <collection property="emps" ofType="mapper.entity.Employee">-->
<!--            <id column="id" property="id"/>-->
<!--            <result column="lastName" property="lastName"/>-->
<!--            <result column="email" property="email"/>-->
<!--            <result column="gender" property="gender"/>-->
<!--        </collection>-->

        <!--   级联属性集合直接引用 resultMap id     -->
                <collection property="emps" resultMap="mapper.mapper.EmployeeMapperPlus.EmployeeInfo1"></collection>
    </resultMap>


    <resultMap id="deptInfo3" type="mapper.entity.Department">
        <id column="did" property="id"/>
        <result column="dept_name" property="deptName"/>
        <collection property="emps" select="mapper.mapper.EmployeeMapperPlus.queryEmpsByDeptId" column="did" ofType="mapper.entity.Employee" />
    </resultMap>


    <select id="getById" resultType="mapper.entity.Department">
        select * from department where id=#{id}
    </select>

    <select id="getDeptEmpsById" resultMap="deptInfo2">
       	 select e.id,e.lastName,e.email,e.gender,d.id did,d.dept_name
       	    from department d
             left join employee e
                on d.id=e.d_id
                where d.id=#{id}
    </select>


    <select id="getDeptEmpsByStep" resultMap="deptInfo3">
        select id did,dept_name from department where id=#{id}
    </select>

</mapper>